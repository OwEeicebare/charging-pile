@import "../../template/popup/popup.wxss";
@import "../../template/state/state.wxss";

/* pages/recharge/recharge.wxss */

.recharge-wrap {
  overflow: hidden;
  margin: 0 40rpx;
}

.amount {
  display: flex;
  margin: 0 0 40rpx;
  justify-content: space-between;
  flex-wrap: wrap;
  font-size: 36rpx;
}

.amount > view {
  width: 210rpx;
  height: 100rpx;
  text-align: center;
  line-height: 98rpx;
}

.customize-money {
  display: flex;
  height: 100rpx;
  padding-left: 40rpx;
  border-bottom: 4rpx solid #000;
  align-items: center;
  margin-bottom: 40rpx;
  font-size: 32rpx;
}

.customize-input {
  font-size: 36rpx;
  flex: auto;
  margin-left: 10rpx;
}

.ensure-recharge {
  text-align: center;
  height: 80rpx;
  line-height: 78rpx;
}

.mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.4);
}
