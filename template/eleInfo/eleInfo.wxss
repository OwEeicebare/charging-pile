.page-information {
  position: fixed;
  top: 0;
  width: 100vw;
  height: 100vh;
  left: 0;
  z-index: 101;
}

.mask {
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.4);
}

.electronic-list-wrap {
  position: absolute;
  width: 100vw;
  bottom: 0;
  background-color: #fff;
  padding: 40rpx 40rpx;
  text-align: center;
}

.list-type-title {
  display: inline-block;
  height: 50rpx;
  width: 200rpx;
  line-height: 46rpx;
}

.title-wrap {
  position: relative;
}

.close-list {
  width: 50rpx;
  height: 50rpx;
  line-height: 48rpx;
  border-radius: 50%;
  text-align: center;
  position: absolute;
  right: 0;
  top: 0;
}

.close-list > image {
  width: 30rpx;
  height: 30rpx;
  margin-top: 7rpx;
}

.ele-list-arr, .rules-arr {
  margin-top: 40rpx;
  position: relative;
  max-height: 680rpx;
}

.ele-th, .rules-th {
  height: 80rpx;
  line-height: 76rpx;
  border-bottom: 4rpx solid #000;
}

.ele-td {
  height: 100rpx;
  line-height: 96rpx;
}

.rules-td {
  padding: 30rpx 0;
}

.ele-th, .ele-td, .rules-td, .rules-th {
  display: flex;
}

.rules-td, .rules-th {
  display: flex;
  align-items: center;
}

.ele-th > view:nth-child(1), .ele-th > view:nth-child(3),
.ele-td > view:nth-child(1), .ele-td > view:nth-child(3) {
  width: 135rpx;
  overflow: hidden;
}

.ele-th > view:nth-child(2), .ele-td > view:nth-child(2) {
  width: 400rpx;
  overflow: hidden;
}

.ele-tbody-wrap, .rules-tbody-wrap {
  width: 100%;
  max-height: 600rpx;
  overflow: hidden;
}

.ele-tbody, .rules-tbody {
  max-height: 596rpx;
  overflow-y: scroll;
}

.free {
  color: rgb(55, 216, 133);
}

.rules-td > view:nth-child(1), .rules-th > view:nth-child(1) {
  width: 36%;
}

.rules-tbody {
  text-align: left;
}

.rules-td > view {
  padding-left: 40rpx;
}

.rules-td > view:nth-child(2) {
  font-weight: normal;
}

.rules-td > view:nth-child(2) > view:nth-child(1) {
  font-weight: 600;
}

.rules-td > view:nth-child(2), .rules-th > view:nth-child(2) {
  width: 64%;
}

.simple {
  font-weight: normal;
}

.rules-td > view:nth-child(2) > .simple:nth-child(2) {
  margin-top: 10rpx;
}
